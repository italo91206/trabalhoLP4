@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section javascript{
    <script src="~/js/Categoria/index.js"></script>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Cadastrar nova categoria</h1>
            </div>
        </div>
    </div>
</div>

<div class="content-novo card">
    <form>
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="Nome" value="" placeholder="Eletrônicos" class="form-control"/>
        </div>

        <div class="form-group">
            <label>Descrição</label>
            <input type="text" id="descricao" value="" placeholder="Eletrônicos são dispositivos que necessitam de energia..." class="form-control"/>
        </div>

        <div class="form-group">
            <input type="button" id="cadastrarProduto" value="Cadastrar Categoria" onclick="index.cadastrarCategoria()" />
            <input type="button" id="listarProduto" value="Ver categorias" onclick="index.listarCategorias()" />
            
            <button>
                <a href="/Produto">Cadastrar Produtos</a>
            </button>
        </div>
    </form>

    <table id="categorias-listagem">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    </table>

    <div class="errors" style="color: red" id="errors">
        @ViewBag.Msg
    </div>
</div>