@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Cadastrar novo usuário</h1>
            </div>
        </div>
    </div>
</div>

<div class="content-novo card">
    <form action="~/Cadastrar/Novo" method="post">
        <label>Nome</label>
        <input type="text" name="Nome" value="" placeholder="Italo Ferreira"/>
        
        <br />
        
        <label>Login</label>
        <input type="text" name="Login" value="" placeholder="admin" />

        <br />

        <label>E-mail</label>
        <input type="text" name="Email" value="" placeholder="italo@unoeste.com.br"/>

        <br />

        <label>Senha</label>
        <input type="password" name="Senha" value="" placeholder="123..."/>
    
        <br/>
        <input type="submit" name="botaoCadastrar" value="Cadastrar" />

    </form>

    <div class="erros" style="color: red;">
        @ViewBag.Msg
    </div>

</div>