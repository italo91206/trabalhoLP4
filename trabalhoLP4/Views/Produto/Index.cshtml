@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section javascript{
    <script src="~/js/Produto/index.js"></script>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Cadastrar novo produto</h1>
            </div>
        </div>
    </div>
</div>

<div class="content-novo card">
    <form action="~/Produto/Novo" method="post">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="Nome" value="" placeholder="Tekpix 3000-v2" onchange="index.listarCategorias()" class="form-control"/>
        </div>

        <div class="form-group">
            <label>Descrição</label>
            <input type="text" id="descricao" value="" placeholder="Insira aqui uma descrição..." class="form-control"/>
        </div>

        <div class="form-group">
            <label>Categoria</label>
            <select id="categoria" class="form-control">
                <option value="1" selected></option>
            </select>
        </div>

        <div class="form-group">
            <label>Preço</label>
            <input type="number" id="preco" value="" placeholder="R$ 10.99" class="form-control"/>
        </div>

        <div class="form-group">
            <label>Quantidade</label>
            <input type="number" id="quantidade" value="" placeholder="01" class="form-control"/>
        </div>

        <div class="form-group">
            <input type="button" id="cadastrarProduto" value="Cadastrar Produto" onclick="index.cadastrarProduto()" />
            <input type="button" id="listarProduto" value="Ver produtos" onclick="index.listarProdutos()" />

            <button>
                <a href="/Categoria">Cadastrar categorias</a>
            </button>
        </div>
    </form>

    <table id="produtos-listagem">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Categoria</th>
        </tr>

    </table>

    <div class="errors" style="color: red" id="errors">
        @ViewBag.Msg
    </div>
</div>