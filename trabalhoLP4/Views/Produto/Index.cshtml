@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section javascript{
    <script src="~/js/Produto/index.js"></script>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Cadastrar novo produto</h1>
            </div>
        </div>
    </div>
</div>

<div class="content-novo card">
    <form action="~/Produto/Novo" method="post">
        <label>Nome</label>
        <input type="text" id="Nome" value="" placeholder="Tekpix 3000-v2" />

        <br />

        <label>Descrição</label>
        <input type="text" id="descricao" value="" placeholder="Insira aqui uma descrição..." />

        <br />

        <label>Categoria</label>
        <input type="text" id="categoria" value="" placeholder="Eletrônicos" />

        <br />

        <label>Preço</label>
        <input type="number" id="preco" value="" placeholder="R$ 10.99" />

        <br />

        <label>Quantidade</label>
        <input type="number" id="quantidade" value="" placeholder="01" />

        <br />
        <input type="button" id="cadastrarProduto" value="Cadastrar Produto" onclick="index.cadastrarProduto()" />
        <input type="button" id="listarProduto" value="Ver produtos" onclick="index.listarProdutos()" />
    </form>

    <table id="produtos-listagem">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Categoria</th>
        </tr>

    </table>

    <div class="errors" style="color: red" id="errors">
        @ViewBag.Msg
    </div>
</div>